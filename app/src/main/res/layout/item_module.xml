<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/module_wrapper"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewModuleName"
        android:text="Text sample"
        android:layout_alignParentTop="true"
        android:textColor="@color/textColor"

    />

    <TextView
        android:id="@+id/textViewNumberOfFlashcards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewModuleName"
        android:layout_marginTop="12dp"
        android:text="Text sample"
        android:textColor="@color/textColor" />


    <TextView
        android:id="@+id/textViewUserCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNumberOfFlashcards"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/textViewCreatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewUserCreated"
        android:layout_alignBottom="@+id/textViewUserCreated"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:text="Text sample"
        android:textColor="@color/textColor" />

</RelativeLayout>